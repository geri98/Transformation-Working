@model Data.Entity.User


@{ Layout = "~/Views/Shared/_Layout.cshtml";}

<style>

        .white-section label {
            margin-bottom: 15px;
        }

    .dark .white-section {
        background-color: #111;
        -webkit-box-shadow: 0px 1px 1px 0px #444;
        box-shadow: 0px 1px 1px 0px #444;
    }

    #content {
        background-image: url('../../Content/images/page/profile-3.jpeg');
        background-color: rgba(255,255,255,0.5);
        background-size: cover;
    }

    .table {
        background-color: #000000a6;
        color: white;
    }

    h3 {
        color: white;
    }

    label {
        color: white;
    }
</style>

<body class="stretched">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">

        <!-- Header
        ============================================= -->
        <header id="header" class="full-header">

            <div id="header-wrap">

                <div class="container clearfix">

                    <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>

                    <!-- Logo
                    ============================================= -->
                    <div id="logo">
                        <a href="@Url.Action("Index", "Home")" class="standard-logo" data-dark-logo="../../Content/images/logo-dark.png"><img src="../../Content/images/logo.png" alt="Transforamtion Logo"></a>
                        <a href="@Url.Action("Index", "Home")" class="retina-logo" data-dark-logo="../../Content/images/logo-dark@2x.png"><img src="../../Content/images/logo.png" alt="Transforamtion Logo"></a>
                    </div><!-- #logo end -->

                    <div id="top-account" class="dropdown">
                        <a href="#" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="icon-user"></i></a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <a class="dropdown-item tleft" href="#">Profile</a>
                            <a class="dropdown-item tleft" href="#">Settings</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item tleft" href="@Url.Action("Logout", "User")">Logout <i class="icon-signout"></i></a>
                        </ul>
                    </div>
                </div>
            </div>

        </header><!-- #header end -->
        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="row clearfix">

                        <div class="col-md-9">

                            <img src="../../Content/images/avatar.jpg" class="alignleft img-circle img-thumbnail notopmargin nobottommargin" alt="Avatar" style="max-width: 84px;">

                            <div class="heading-block noborder">
                                <h3>@Model.Username</h3>
                            </div>

                            <div class="clear"></div>

                            <div class="row clearfix">

                                <div class="col-lg-12">

                                    <ul class="tab-nav clearfix">
                                        <li><a href="@Url.Action("TopUsers", "Profile",new { id=Model.Username})"><i class="icon-users"></i> Top Users</a></li>
                                        <li><a href="@Url.Action("Rating", "Profile",new { id=Model.Username})"><i class="icon-star3"></i> Rating</a></li>
                                        <li><a href="@Url.Action("CreateWorkout", "Profile",new { id=Model.Username})"><i class="icon-plus-sign"></i> Create workout plan</a></li>
                                        <li><a href="@Url.Action("Workout", "Profile",new { id=Model.Username})"><i class="icon-heart3"></i> Workouts</a></li>
                                    </ul>

                                        <div class="tab-container">
                                            <div class="tab-content clearfix" id="rating">
                                                <div class="row">
                                                    <div class="col-lg-6 bottommargin-sm">
                                                        <form id="login-form" name="login-form" action="@Url.Action("Rating", "Profile",Model.Username)" method="post">

                                                            <div class="form-group">
                                                                <label for="inputState">Rate your training</label>
                                                                <select class="select-1 form-control" style="width:100%;" name="rating">
                                                                    <optgroup label="Rate Your Workout">
                                                                        <option value="5">- - - </option>
                                                                        <option value="4">Excllent</option>
                                                                        <option value="3">Very Good</option>
                                                                        <option value="2">Good</option>
                                                                        <option value="1">Bad</option>
                                                                    </optgroup>
                                                                </select>
                                                            </div>
                                                            <button form="login-form" class="" btn btn-primary" id="login-submit" name="login-form-submit" value="Finish">Finish</button>

                                                        </form>
                                                    </div>
                                                    <h4>@Model.TrainingUser.Rating</h4>

                                                    <div class="white-section">
                                                        <label>Your rating:</label>
                                                        <input id="input-16" class="rating" value="@Model.TrainingUser.Rating" data-size="sm" data-interval=".1" data-disabled="true">
                                                    </div>
                                                </div>
                                            </div>

                                        </div>


                                    </>
                                </div>

                            </div>

                            <div class="w-100 line d-block d-md-none"></div>
                        </div>

                    </div>

                </div>
            </div>

        </section><!-- #content end -->
        <!-- Copyrights
        ============================================= -->
        <div id="copyrights">

            <div class="container clearfix">

                <div class="col_half">
                    Copyrights &copy; 2014 All Rights Reserved by Canvas Inc.<br>
                </div>

                <div class="col_half col_last tright">
                    <div class="fright clearfix">
                        <a href="#" class="social-icon si-small si-borderless si-facebook">
                            <i class="icon-facebook"></i>
                            <i class="icon-facebook"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-twitter">
                            <i class="icon-twitter"></i>
                            <i class="icon-twitter"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-gplus">
                            <i class="icon-gplus"></i>
                            <i class="icon-gplus"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-pinterest">
                            <i class="icon-pinterest"></i>
                            <i class="icon-pinterest"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-vimeo">
                            <i class="icon-vimeo"></i>
                            <i class="icon-vimeo"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-github">
                            <i class="icon-github"></i>
                            <i class="icon-github"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-yahoo">
                            <i class="icon-yahoo"></i>
                            <i class="icon-yahoo"></i>
                        </a>

                        <a href="#" class="social-icon si-small si-borderless si-linkedin">
                            <i class="icon-linkedin"></i>
                            <i class="icon-linkedin"></i>
                        </a>
                    </div>

                    <div class="clear"></div>

                </div>

            </div>

        </div><!-- #copyrights end -->
    </div><!-- #wrapper end -->
    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

