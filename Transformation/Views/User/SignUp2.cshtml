@model Data.Entity.TrainingUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .section.nobg.full-screen.nopadding.nomargin {
        height: 800px !important;
    }

    .container-fluid.vertical-middle.divcenter.clearfix {
        margin-top: -380px !important;
    }
</style>
<body class="stretched">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">

        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap nopadding">

                <div class="section nopadding nomargin" style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background: url('../../Content/images/page/slider/test3.jpeg') center center no-repeat; background-size: cover;"></div>

                <div class="section nobg full-screen nopadding nomargin">
                    <div class="container-fluid vertical-middle divcenter clearfix">

                        <div class="center">
                            <a href="@Url.Action("Index", "Home")"><img style="height:90px;" src="../../Content/images/logo.png" alt="Logo"></a>
                        </div>

                        <div class="card divcenter noradius noborder" style="max-width: 400px; background-color: rgba(255,255,255,0.3);">
                            <div class="card-body" style="padding: 40px;">
                                <form id="login-form" name="login-form" class="nobottommargin" action="@Url.Action("SignUp2", "User")" method="post">
                                    <h3>Finish your Account</h3>

                                    <div class="col_full">
                                        <label for="login-form-username">Age:</label>
                                        <input type="number" id="login-form-username" name="age" value="" class="form-control not-dark" />
                                        @Html.ValidationMessageFor(model => model.Age)
                                    </div>

                                    <div class="col_full">
                                        <label for="login-form-username">Height(in cm):</label>
                                        <input type="number" id="login-form-email" name="height" value="" class="form-control not-dark" />
                                        @Html.ValidationMessageFor(model => model.Height)
                                    </div>

                                    <div class="col_full">
                                        <label for="login-form-password">Weight(in kg):</label>
                                        <input type="number" id="login-form-password" name="weight" value="" class="form-control not-dark" />
                                        @Html.ValidationMessageFor(model => model.Weight)
                                    </div>

                                    <div class="col_full">

                                        <label for="">Gender:</label>
                                        <select class="select-1 form-control" style="width:100%;" name="gender">
                                            <optgroup label="Genders:">
                                                <option value="">- - - </option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </optgroup>
                                        </select>
                                        @Html.ValidationMessageFor(model => model.Gender)

                                    </div>

                                    <div class="col_full">

                                        <label for="">Chose your level:</label>
                                        <select class="select-1 form-control" style="width:100%;" name="level">
                                            <optgroup label="Levels of trainings">
                                                <option value="">- - - </option>
                                                <option value="Weight loss">Weight loss</option>
                                                <option value="Gain mass">Gain mass</option>
                                                <option value="Power and Strenght">Power and Strenght</option>
                                            </optgroup>
                                        </select>

                                        @Html.ValidationMessageFor(model => model.Level)

                                    </div>


                                </form>

                                <div class="line line-sm"></div>

                                <div class="center">
                                    <button form="login-form" class="button button-3d button-black nomargin" id="login-form-submit" name="register" value="Sign up">Sign up</button>

                                </div>
                            </div>
                        </div>

                        <div class="center dark"><small>Copyrights &copy; All Rights Reserved by Canvas Inc.</small></div>

                    </div>
                </div>

            </div>

        </section><!-- #content end -->

    </div><!-- #wrapper end -->
    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

 
